<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Other elements go here -->
    <!-- Additional Rectangle with Rounded Top Corners -->
    <View
        android:id="@+id/additionalRectangle"
        android:layout_width="match_parent"
        android:layout_height="650dp"


        android:background="@drawable/rounded_rectangle_for_profile"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/transparentCircleImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_marginTop="150dp"
        android:background="@drawable/circle_with_stroke"

        app:layout_constraintBottom_toTopOf="@+id/additionalRectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- android:src="@drawable/ana" -->
    <!-- ... Other elements go here ... -->

    <TextView
        android:id="@+id/username"
        android:layout_width="800px"
        android:layout_height="120px"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nimbussanl_reg"
        android:gravity="center"
        android:text="Ben amor Sameh"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semiTransparentRectangle" />




    <TextView
        android:id="@+id/role"
        android:layout_width="800px"
        android:layout_height="120px"
        android:layout_marginStart="48dp"

        android:fontFamily="@font/nimbussanl_reg"
        android:gravity="center"
        android:text="Contributeur"
        android:textColor="#E53529"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <View
        android:id="@+id/semiTransparentRectangle"
        android:layout_width="300px"
        android:layout_height="81px"
        android:layout_marginTop="20dp"
        android:background="@drawable/semi_transparent_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transparentCircleImageView"

        />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="300px"
        android:layout_height="81px"
        android:layout_marginTop="-30dp"
        android:fontFamily="@font/nimbussanl_bol"
        android:gravity="center"
        android:text="Nabeul"
        android:textColor="#5CB25D"
        app:layout_constraintStart_toStartOf="@+id/semiTransparentRectangle"
        app:layout_constraintTop_toBottomOf="@+id/semiTransparentRectangle" />

    <View
        android:id="@+id/biorectangle"
        android:layout_width="900px"
        android:layout_height="600px"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_rectangle_for_bio"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/role" />

    <TextView
        android:id="@+id/bio"
        android:layout_width="800px"
        android:layout_height="500px"
        android:layout_marginStart="-95dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/nimbussanl_reg"
        android:gravity="center"
        android:text="Bonjour, je m'appelle Sameh ben amor et je suis un membre actif de la communautÃ© EcoLink ! Bienvenue sur mon profil."
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/semiTransparentRectangle"
        app:layout_constraintTop_toBottomOf="@+id/semiTransparentRectangle" />

    <Button
        android:id="@+id/modifierprofile"
        android:layout_width="800px"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="-90dp"


        android:layout_marginTop="380dp"
        android:background="@drawable/landingpageloginbutton"

        android:fontFamily="@font/nimbussanl_reg"
        android:text="Modifier profile"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/semiTransparentRectangle"
        app:layout_constraintTop_toBottomOf="@+id/semiTransparentRectangle" />

    <Button
        android:id="@+id/logout"
        android:layout_width="800px"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="-90dp"


        android:layout_marginTop="450dp"
        android:background="@drawable/logout_button"

        android:fontFamily="@font/nimbussanl_reg"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/semiTransparentRectangle"
        app:layout_constraintTop_toBottomOf="@+id/semiTransparentRectangle" />
</androidx.constraintlayout.widget.ConstraintLayout>